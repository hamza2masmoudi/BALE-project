# BALE Environment Configuration
# Copy this to .env and fill in your values

# ==================== INFERENCE ====================
# Local LLM (Ollama/vLLM)
LOCAL_LLM_ENDPOINT=http://localhost:11434/v1/chat/completions
LOCAL_LLM_MODEL=qwen2.5:32b

# Mistral API (Cloud)
MISTRAL_API_KEY=your_mistral_api_key_here

# ==================== DATABASE ====================
# Option 1: Full URL
# DATABASE_URL=postgresql://bale:bale_dev@localhost:5432/bale

# Option 2: Individual components
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=bale
POSTGRES_PASSWORD=bale_dev
POSTGRES_DB=bale

# ==================== REDIS ====================
REDIS_URL=redis://localhost:6379/0

# ==================== API ====================
API_PORT=8080
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# ==================== ENVIRONMENT ====================
BALE_ENV=development
BALE_DEBUG=false
BALE_DB_ECHO=false

# ==================== OPTIONAL ====================
# Deep learning API (alternative)
# DEEPSEEK_API_KEY=your_deepseek_key_here

# Wandb for training monitoring
# WANDB_API_KEY=your_wandb_key
# WANDB_PROJECT=bale-legal-finetune

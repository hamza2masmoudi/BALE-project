# ============================================
# BALE Environment Configuration
# ============================================
# Copy to .env and fill in your values

# ==================== APPLICATION ====================
BALE_ENV=development              # development | staging | production
BALE_DEBUG=true                   # Enable debug mode
BALE_SECRET_KEY=                  # Generate: openssl rand -hex 32

# ==================== API ====================
API_PORT=8080
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ==================== LLM CONFIGURATION ====================
# Local LLM (Ollama/vLLM)
LOCAL_LLM_ENDPOINT=http://localhost:11434/v1/chat/completions
LOCAL_LLM_MODEL=qwen2.5:32b
LLM_TIMEOUT=120                   # Timeout in seconds

# Cloud LLM (Mistral)
MISTRAL_API_KEY=                  # Your Mistral API key
MISTRAL_MODEL=mistral-large-latest

# DeepSeek (alternative)
DEEPSEEK_API_KEY=
DEEPSEEK_MODEL=deepseek-chat

# ==================== DATABASE ====================
DATABASE_URL=postgresql://bale:bale_dev@localhost:5432/bale

# Individual connection params (used by Docker)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=bale
POSTGRES_PASSWORD=bale_dev        # CHANGE IN PRODUCTION!
POSTGRES_DB=bale

# Connection pool
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ==================== REDIS ====================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=                   # Set for production

# ==================== NEO4J (Knowledge Graph) ====================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=bale_dev           # CHANGE IN PRODUCTION!

# ==================== AUTHENTICATION ====================
JWT_SECRET_KEY=                   # Generate: openssl rand -hex 32
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# ==================== WEBHOOKS ====================
# Slack
SLACK_WEBHOOK_URL=                # Your Slack webhook URL

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# ==================== VECTOR STORE ====================
CHROMA_PERSIST_DIR=./data/chroma
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ==================== FINE-TUNING ====================
TRAINING_OUTPUT_DIR=./training/output
MODEL_REGISTRY_PATH=./models/registry.json

# ==================== MONITORING ====================
# Sentry (error tracking)
SENTRY_DSN=

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=

# ==================== FRONTEND ====================
VITE_API_URL=http://localhost:8080

# ==================== DEVELOPMENT ====================
# Hot reload
WATCHFILES_FORCE_POLLING=false

# SQL echo (show queries)
BALE_DB_ECHO=false
